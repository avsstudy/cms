{
  "kind": "collectionType",
  "collectionName": "news_articles",
  "info": {
    "singularName": "news-article",
    "pluralName": "news-articles",
    "displayName": "News_Article"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "description": {
      "type": "text",
      "required": true
    },
    "cover": {
      "type": "media",
      "multiple": false,
      "required": true,
      "allowedTypes": [
        "images"
      ]
    },
    "slug": {
      "type": "uid",
      "targetField": "title",
      "required": true
    },
    "topic": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::topic.topic",
      "inversedBy": "news_articles"
    },
    "category": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::category.category",
      "inversedBy": "news_articles"
    },
    "subscription_type": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::subscription-type.subscription-type",
      "inversedBy": "news_articles"
    },
    "comments_enabled": {
      "type": "boolean",
      "required": true,
      "default": false
    },
    "pinned": {
      "type": "boolean",
      "required": true,
      "default": false
    },
    "views": {
      "type": "integer",
      "default": 1
    },
    "general_content": {
      "type": "dynamiczone",
      "components": [
        "shared.zakon",
        "shared.video-review",
        "shared.text",
        "shared.ipk",
        "shared.image",
        "shared.custom-video",
        "shared.custom-table",
        "shared.custom-quote",
        "shared.ck-editor-table"
      ],
      "required": true
    }
  }
}
