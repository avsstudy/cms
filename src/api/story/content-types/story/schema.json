{
  "kind": "collectionType",
  "collectionName": "stories",
  "info": {
    "singularName": "story",
    "pluralName": "stories",
    "displayName": "NewsArticle"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string"
    },
    "description": {
      "type": "text"
    },
    "cover": {
      "type": "media",
      "multiple": false,
      "allowedTypes": [
        "images",
        "files"
      ]
    },
    "slug": {
      "type": "uid",
      "targetField": "title"
    },
    "topics": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::topic.topic",
      "inversedBy": "stories"
    },
    "categories": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::category.category",
      "mappedBy": "stories"
    },
    "subscriptionType": {
      "type": "enumeration",
      "enum": [
        "free",
        "payed"
      ]
    },
    "commentsEnabled": {
      "type": "boolean",
      "default": false
    },
    "pinned": {
      "type": "boolean",
      "default": false
    },
    "views": {
      "type": "integer",
      "default": 1
    },
    "general": {
      "type": "dynamiczone",
      "components": [
        "shared.text",
        "shared.image",
        "shared.custom-video",
        "shared.custom-table",
        "shared.video-review"
      ]
    }
  }
}
